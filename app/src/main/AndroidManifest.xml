<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.android.catalog">


    <uses-permission android:name="android.permission.INTERNET"/>

    <application
            android:name="com.android.catalog.MainApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">


        <activity android:name="com.android.catalog.presentation.catalog.CatalogActivity"
        android:theme="@style/NoTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name="com.android.catalog.presentation.detailitem.ItemDetailActivity"
                  android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>